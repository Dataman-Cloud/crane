version: 0.1
log:
  level: debug
  fields:
    service: registry
storage:
    cache:
        layerinfo: inmemory
    filesystem:
        rootdirectory: /storage
    maintenance:
        uploadpurging:
            enabled: false
http:
    addr: :5000
    secret: placeholder
    debug:
        addr: localhost:5001
auth:
  token:
    issuer: dataman-inc
    realm: http://CRANE_IP:CRANE_PORT/registry/v1/token
    rootcertbundle: /etc/registry/root.crt
    service: token-service

notifications:
  endpoints:
      - name: crane
        disabled: false
        url: http://CRANE_IP:CRANE_PORT/registry/v1/notifications
        timeout: 500
        threshold: 5
        backoff: 1000

